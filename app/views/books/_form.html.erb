<%= bootstrap_form_for( @book, layout: :horizontal, :html => {class: 'form-horizontal'}) do |f| %>
    <%= f.text_field :title, placeholder: 'Title of the book', autofocus: true %>
    <%= f.text_field :isbn, placeholder: 'Book ISBN' %>
    <%= f.number_field :page_count, placeholder: 'Number Pages' %>
    <%= f.number_field :price, placeholder: 'Book unit price' %>
    <%= f.date_field :published_at, label: 'Published at'  %>
    <%= f.text_area :description, placeholder: 'Book description' %>
    <%= f.select :publisher_id, @publisher.map { |p| [p.name,p.id]},
                    prompt: 'Select a publisher'%>
    <%= f.file_field :book_cover %>
    <%= f.collection_check_boxes :author_ids, @authors, :id, :full_name %>
    <%= f.submit %>
<% end %>